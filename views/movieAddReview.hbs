<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>

<body>
    <a href="/" class="btn btn-info">Home</a>
    <br><br>
    <h1 class="jumbotron">{{title}}</h1>
    <form method="POST" action="/addreview/{{title}}">
        <div class="form-group">
            <h5><label for="email">Email address:</label> </h5>
            <input type="email" name="author" class="form-control" id="email" placeholder="Email">
        </div>
        <h5>Ratings (Out of 5):</h5>
        <div class="radio">
            <label>1 Star <input type="radio" name="rating" value="1"></label>
        </div>
        <div class="radio">
            <label>2 Star <input type="radio" name="rating" value="2"></label>
        </div>
        <div class="radio ">
            <label>3 Star <input type="radio" name="rating" value="3"></label>
        </div>
        <div class="radio ">
            <label>4 Star <input type="radio" name="rating" value="4"></label>
        </div>
        <div class="radio ">
            <label>5 Star <input type="radio" name="rating" value="5"></label>
        </div>
        <div class="form-group">
            <h5><label for="comment">Comment:</label></h5>
            <textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
        </div>
        <input type="submit" class="btn btn-primary" value="Submit">

    </form>
</body>

</html>